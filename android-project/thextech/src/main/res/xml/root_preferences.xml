<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/setup_general_cat">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="enable_frame_skip"
            android:title="@string/settings_enable_frameskip" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="disable_sound"
            android:title="@string/setup_disable_sound" />
        <Preference
            android:key="setup_assets_path"
            android:title="@string/setup_assets_path_label" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setup_control_cat">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/touchscreenControllerTypes"
            android:entryValues="@array/touchscreenControllerTypesValues"
            android:key="setup_touchscreen_mode"
            android:title="@string/setup_touchscreen_mode" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/touchPadStyles"
            android:entryValues="@array/touchPadStylesValues"
            android:key="setup_touchscreen_style"
            android:title="@string/setup_touchpad_style" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="touchscreen_gamepad_showalways"
            android:title="@string/setup_touchscreen_alwaysshow" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setup_feedback">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="touchscreen_feedback_enabled"
            android:title="@string/setup_feedback_enable_vibration" />
        <ListPreference
            android:defaultValue="1.0"
            android:entries="@array/feedBackStrength"
            android:entryValues="@array/feedBackStrengthValues"
            android:key="touchscreen_vibration_strength"
            android:title="@string/setup_feedback_vibration_strength" />
        <ListPreference
            android:defaultValue="12"
            android:entries="@array/feedBackLength"
            android:entryValues="@array/feedBackLengthValues"
            android:key="touchscreen_vibration_length"
            android:title="@string/setup_feedback_vibration_length" />
        <Preference
            android:key="touchscreen_vibration_test"
            android:title="@string/touchscreen_vibration_test_label" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setup_display_cat">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="show_fps"
            android:title="@string/setup_show_framerate" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="enable_max_fps"
            android:title="@string/setup_max_framerate_mode" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="setup_show_controller_state"
            android:title="@string/setup_show_controller_state_label" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/batteryStatusShow"
            android:entryValues="@array/batteryStatusShowValues"
            android:key="setup_show_battery_status"
            android:title="@string/setup_show_battery_status_label" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setup_speedrunner">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/speedRunModes"
            android:entryValues="@array/speedRunModesValues"
            android:key="setup_speedRunMode"
            android:title="@string/setup_sr_speedrunMode" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="setup_sr_showStopwatchTransparent"
            android:title="@string/setup_sr_stopwatchSemiTransparent" />
    </PreferenceCategory>
</PreferenceScreen>